{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "requireCleanWorkingDir": false,
        "add": false
    },
    "github": {
        "release": true,
        "assets": [
            "woocommerce-x402.zip"
        ]
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "node scripts/bump-version.js ${version} && ./scripts/pack-plugin.sh && git add package.json woocommerce-x402/woocommerce-x402.php"
    },
    "plugins": {}
}